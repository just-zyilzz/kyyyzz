{
    "version": 2,
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*\\.css|.*\\.js|.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.gif|.*\\.svg|.*\\.ico|.*\\.webp|.*\\.xml|.*\\.txt)",
            "dest": "/public/$1",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/",
            "dest": "/public/index.html",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            }
        }
    ],
    "functions": {
        "api/**/*.js": {
            "maxDuration": 60
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}